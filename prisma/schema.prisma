generator client {
  provider = "prisma-client-js"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_DATABASE_URL")
}

enum LobbyStatus {
  LOBBY
  IN_GAME
  ENDED
}

enum LobbyMode {
  IN_PERSON
  VIRTUAL
}

model Lobby {
  id        String      @id @default(cuid())
  code      String      @unique @db.VarChar(6)
  status    LobbyStatus @default(LOBBY)
  mode      LobbyMode   @default(IN_PERSON)
  createdAt DateTime    @default(now())
  expiresAt DateTime
  endedAt   DateTime?
  hostPlayerId    String?
  activePlayerId  String?
  currentCardIndex Int     @default(0)
  currentTurnIndex Int     @default(0)

  players Player[]
  photos  Photo[]
}

model Player {
  id        String   @id @default(cuid())
  lobbyId   String
  name      String
  isHost    Boolean  @default(false)
  createdAt DateTime @default(now())
  leftAt    DateTime?

  lobby Lobby @relation(fields: [lobbyId], references: [id], onDelete: Cascade)
  photos Photo[]

  @@index([lobbyId])
}

model Photo {
  id          String   @id @default(cuid())
  lobbyId     String
  playerId    String
  title       String
  storagePath String
  publicUrl   String
  deckOrder   Int?
  createdAt   DateTime @default(now())

  lobby  Lobby  @relation(fields: [lobbyId], references: [id], onDelete: Cascade)
  player Player @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@index([lobbyId])
  @@index([playerId])
}
